{
  "name": "remorhaz/php-unilex",
  "description": "Unilex: lexical analyzer generator with Unicode support written in PHP",
  "keywords": [
    "lex",
    "lexical analyzer",
    "lexical analyzer generator",
    "tokenizer",
    "tokenizer generator"
  ],
  "homepage": "https://github.com/remorhaz/php-unilex",
  "license": "MIT",
  "authors": [
    {
      "name": "Edward Surov",
      "email": "zoohie@gmail.com",
      "role": "Developer"
    }
  ],
  "bin": [
    "bin/unilex"
  ],
  "require": {
    "php": "^7.3",
    "phpdocumentor/reflection-docblock": "^4.3.4 | ^5.0.0",
    "nikic/php-parser": "^4.2",
    "symfony/console": "^5.0.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0.1",
    "phing/phing": "^2.16.3",
    "squizlabs/php_codesniffer": "^3.5.4",
    "infection/infection": "^0.15.3"
  },
  "autoload": {
    "psr-4": {
      "Remorhaz\\UniLex\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Remorhaz\\UniLex\\Test\\": "tests/",
      "Remorhaz\\UniLex\\Example\\Brainfuck\\": "examples/Brainfuck/src/",
      "Remorhaz\\UniLex\\Example\\Brainfuck\\Test\\": "examples/Brainfuck/tests/",
      "Remorhaz\\UniLex\\Example\\SimpleExpr\\": "examples/SimpleExpr/src/",
      "Remorhaz\\UniLex\\Example\\SimpleExpr\\Test\\": "examples/SimpleExpr/tests/"
    }
  },
  "scripts": {
    "build-example-brainfuck": [
      "bin/unilex generate-token-matcher examples/Brainfuck/spec/LexerSpec.php examples/Brainfuck/src/Grammar/TokenMatcher.php --desc='Brainfuck token matcher.'"
    ],
    "build-examples": [
      "@build-example-brainfuck"
    ],
    "build-regexp": [
      "bin/unilex generate-token-matcher spec/RegExp/LexerSpec.php src/RegExp/Grammar/TokenMatcher.php --desc='RegExp token matcher.'"
    ],
    "build-unicode": [
      "bin/unilex generate-token-matcher spec/Unicode/Utf8LexerSpec.php src/Unicode/Grammar/Utf8TokenMatcher.php --desc='Unicode UTF-8 token matcher.'"
    ],
    "build-core": [
      "@build-regexp",
      "@build-unicode"
    ],
    "build": [
      "vendor/bin/phing",
      "@build-core",
      "@build-examples"
    ],
    "test": [
      "vendor/bin/phpcs -sp",
      "vendor/bin/phpunit --coverage-xml=build/logs/coverage-xml --log-junit=build/logs/junit.xml"
    ],
    "infection": [
      "@test",
      "mkdir -p build/logs/infection",
      "vendor/bin/infection --threads=4 --coverage=build/logs --no-progress"
    ]
  },
  "config": {
    "process-timeout": 0
  }
}
