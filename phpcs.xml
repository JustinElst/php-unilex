<?xml version="1.0" encoding="UTF-8" ?>
<ruleset name="UniLex">
    <description>The coding standards for UniLex library.</description>

    <file>src</file>
    <file>tests</file>
    <file>examples/Brainfuck/src</file>
    <file>examples/Brainfuck/tests</file>
    <file>examples/SimpleExpr/src</file>
    <file>examples/SimpleExpr/tests</file>
    <file>phing</file>

    <arg name="colors" />

    <rule ref="PSR12">
    </rule>

    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>*/tests/*Test.php</exclude-pattern>
    </rule>
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>*/phing/*</exclude-pattern>
    </rule>
</ruleset>
